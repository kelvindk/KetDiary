<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--Event Date  -->
    <LinearLayout
        android:id="@+id/event_content_container_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_content_container_event_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="2016 5 30 午"
            android:textSize="@dimen/abc_text_size_small_material" />

        <TextView
            android:id="@+id/event_content_container_therapy_status"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="心理師驗證"
            android:textSize="@dimen/abc_text_size_medium_material" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">


            <RatingBar
                android:id="@+id/event_content_container_drug_use_risk"
                style="@style/SkullRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:rating="1"
                android:clickable="false"
                android:stepSize="1" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@id/event_content_container_date_layout"
        android:layout_width="match_parent"
        android:background="@color/colorAGray"
        android:alpha="0.5"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"></View>


</RelativeLayout>