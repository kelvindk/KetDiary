<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="5dp"
        android:text="5/30 (五) 午"
        android:id="@+id/fragment_event_list_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="@string/event_list_click_continue_fill"-->
        <!--android:id="@+id/fragment_event_list_click"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true" />-->

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/fragment_event_list_category_icon"
        android:layout_below="@+id/fragment_event_list_date"
        android:layout_alignParentStart="true"
        android:src="@drawable/type_icon3"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/fragment_event_list_danger"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="10dp"
        android:text="thinking, scenario ..."
        android:id="@+id/fragment_event_list_description"
        android:layout_below="@+id/fragment_event_list_danger"
        android:layout_alignBottom="@+id/fragment_event_list_category_icon"
        android:layout_alignEnd="@+id/fragment_event_list_danger"
        android:layout_toEndOf="@+id/fragment_event_list_category_icon" />

    <TextView
        android:id="@+id/fragment_event_list_expected_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="@string/expected_behavior"
        android:layout_below="@+id/fragment_event_list_category_icon"
        android:layout_alignStart="@+id/fragment_event_list_category_icon" />

    <RatingBar
        android:id="@+id/fragment_event_list_item_drug_use_risk_level"
        style="@style/SkullRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"
        android:clickable="false"
        android:layout_alignBottom="@+id/fragment_event_list_danger"
        android:layout_alignEnd="@+id/fragment_event_list_expected_behavior" />

</RelativeLayout>
