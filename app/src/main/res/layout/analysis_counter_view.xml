<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/analysis_counter_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/analyse_line">
        <TextView
            android:id="@+id/analysis_counter_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26.7dp"
            android:gravity="center"
            android:text="升級了!"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

                <ImageView
                    android:id="@+id/analysis_quiz"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:layout_centerVertical = "true"
                    android:src="@drawable/question_self"/>

                <TextView
                    android:id="@+id/analysis_quiz_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="0dp"
                    android:layout_toRightOf="@+id/analysis_quiz"
                    android:text="自我測驗"
                    android:textColor="@color/text_gray3"
                    android:textSize="@dimen/normal_text_size"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageView
                android:id="@+id/analysis_counter_coupon_level"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@drawable/analyse_coupon_level0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/analysis_counter_coupon_level"
                android:layout_centerVertical="true"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/analysis_counter_coupon_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="已獲禮券"
                        android:textColor="@color/text_gray3"
                        android:textSize="@dimen/normal_text_size" />
                    <TextView
                        android:id="@+id/analysis_counter_coupon_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/analysis_counter_coupon_text"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="張"
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/text_gray3"
                        android:textSize="@dimen/normal_text_size"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="還差"
                        android:textColor="@color/text_gray3"
                        android:textSize="@dimen/normal_text_size" />
                    <TextView
                        android:id="@+id/analysis_counter_coupon_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/analysis_counter_coupon_text"
                        android:text="0"
                        android:textColor="@color/blue"
                        android:textSize="18sp" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="點"
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/text_gray3"
                        android:textSize="@dimen/normal_text_size"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="即可"
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/text_gray3"
                        android:textSize="@dimen/normal_text_size"
                        />

                </LinearLayout>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="再得一張禮券!"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/text_gray3"
                    android:textSize="@dimen/normal_text_size"
                    />
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>

</LinearLayout>