<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/event_time"/>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/create_event_day"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/create_event_time_period"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Spinner
        android:layout_width="@dimen/create_even_spinner_date_time_width"
        android:layout_height="@dimen/create_even_spinner_date_time_height"
        android:paddingLeft="10dp"
        android:id="@+id/spinner_day"/>

    <Spinner
        android:layout_width="@dimen/create_even_spinner_date_time_width"
        android:layout_height="@dimen/create_even_spinner_date_time_height"
        android:paddingLeft="10dp"
        android:id="@+id/spinner_time_period"/>

    </LinearLayout>



</LinearLayout>